                                <td>@data.IsUsingWithQB</td>
                                <td>@data.LastName</td>
                                <td>@data.LastSale</td>
                                <td>@data.Notes</td>
                                <td>@data.Phone</td>
                                <td>@data.Phone2</td>
                                <td>@data.Phone3</td>
                                <td>@data.Phone4</td>
                                <td>@data.PriceLevelNumber</td>
                                <td>@data.Salutation</td>
