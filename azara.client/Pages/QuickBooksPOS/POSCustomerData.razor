                                <td>@data.CustomerID</td>
                                <td>@data.DefaultShipAddress</td>
                                <td>@data.EMail</td>
                                <td>@data.FirstName</td>
                                <td>@data.FullName</td>
                                <td>@data.IsAcceptingChecks</td>
                                <td>@data.IsNoShipToBilling</td>
                                <td>@data.IsOkToEMail</td>
                                <td>@data.IsRewardsMember</td>
